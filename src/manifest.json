{
  "name": "AlertUp",
  "description": "Get notifications for your saved searchs on Upwork.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content/index.tsx"
      ],
      "matches": [
        "https://*.upwork.com/*"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://*.upwork.com/*"
  ]
}